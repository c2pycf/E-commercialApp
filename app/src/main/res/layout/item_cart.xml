<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_view_drawer"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/nv_product_image_cart"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:id="@+id/tv_product_title_cart"
                android:padding="@dimen/text_margin"
                android:layout_margin="@dimen/text_margin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:id="@+id/tv_product_prise_cart"
                android:padding="@dimen/text_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="@string/product_total"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:id="@+id/tv_product_quality_cart"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:id="@+id/tv_amount"
                android:text="@string/amount"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <Spinner
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/sp_product_count_cart">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="@string/item_remove_cart"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/item_remove_cart"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="@string/item_save_cart"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/item_save_cart"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="@string/item_edit_cart"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/item_edit_cart"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>