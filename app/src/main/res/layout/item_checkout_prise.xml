<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:elevation="10dp"
    android:id="@+id/item_checkout_prise_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/text_margin"
                    android:layout_gravity="start"
                    android:text="@string/subtotal_cart"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_sub_total_checkout"
                    android:layout_height="match_parent"
                    android:padding="@dimen/text_margin"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_gravity="end" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/text_margin"
                    android:layout_gravity="start"
                    android:text="@string/shipping_fee_cart"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/text_margin"
                    android:id="@+id/tv_shipping_checkout"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/text_margin"
                    android:layout_gravity="start"
                    android:text="@string/tax_cart"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/text_margin"
                    android:id="@+id/tv_tax_checkout"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/text_margin"
                    android:layout_gravity="start"
                    android:text="@string/est_total_cart"
                    android:textSize="15dp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/text_margin"
                    android:id="@+id/tv_est_total_checkout"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:hint="@string/coupon_hints"
                    android:id="@+id/et_coupon"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bt_coupon_apply"
                    android:text="@string/coupon_apply"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

