<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/order_history_sign_in"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/iv_order_history_image"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_sign_in_48"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_order_history_sign_in"
            android:text="@string/login_button_sign"
            android:onClick="onLoginClickedHistory"/>

    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/order_history_recycle">


    </android.support.v7.widget.RecyclerView>

</LinearLayout>