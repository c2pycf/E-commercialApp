<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:background="@drawable/card_view_drawer"
    app:cardUseCompatPadding="true"
        android:id="@+id/cv_wish_list"
        android:visibility="visible">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/nv_product_image_wish"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:id="@+id/tv_product_title_wish"
                android:padding="@dimen/text_margin"
                android:layout_margin="@dimen/text_margin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:id="@+id/tv_product_prise_wish"
                android:padding="@dimen/text_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="@string/product_total"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:id="@+id/tv_product_quality_wish"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:id="@+id/tv_amount"
            android:text="@string/amount"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

        <Spinner
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/sp_product_count_wish">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="@string/item_remove_cart"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/item_remove_wish"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="@string/item_add_wish"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/item_save_wish"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="@string/item_edit_cart"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/item_edit_wish"/>

    </LinearLayout>


</LinearLayout>

</android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tv_wish_list_empty"
        android:visibility="gone"
        android:text="@string/no_wish_list_item"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"/>

</LinearLayout>