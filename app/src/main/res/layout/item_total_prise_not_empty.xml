<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5dp"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/layout_shape">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/no_cart_item"
            android:id="@+id/tv_empty_cart"
            android:background="@drawable/layout_shape" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="@dimen/text_margin"
                android:layout_gravity="start"
                android:text="@string/subtotal_cart"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_sub_total_cart"
                android:layout_height="match_parent"
                android:padding="@dimen/text_margin"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_gravity="end" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/text_margin"
                    android:layout_gravity="start"
                    android:text="@string/shipping_fee_cart"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/text_margin"
                    android:id="@+id/tv_shipping_cart"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_gravity="end" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="@dimen/text_margin"
                android:layout_gravity="start"
                android:text="@string/tax_cart"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/text_margin"
                android:id="@+id/tv_tax_cart"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_gravity="end" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="@dimen/text_margin"
                android:layout_gravity="start"
                android:text="@string/est_total_cart"
                android:textSize="15dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/text_margin"
                android:id="@+id/tv_est_total"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_gravity="end"
                android:gravity="center"
                android:textSize="15sp" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/bt_process"
            android:text="@string/bt_process_to_checkout"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:visibility="gone"/>
    </LinearLayout>

</android.support.v7.widget.CardView>